<section class="hero has-background-danger-dark">
    <div class="hero-body">
      <p class="title has-text-white">
        The Tech Blog
      </p>
    </div>
  </section>
  <div class="columns is-multiline" id="card-container">
    <div class="column is-full spacer">
      </div>
  </div>
  <div class="column is-full">
    <div class="columns">
      <div class="column is-half">
        <!-- Login form -->
        <p>Login</p>

      <div class="field">
          <p class="control">
            <input id="username-login" class="input" type="text" placeholder="Username">
          </p>
        </div>
        <div class="field">
          <p class="control">
            <input id="password-login" class="input" type="password" placeholder="Password">
          </p>
        </div>
        <div class="field">
          <p class="control">
            <button id="login-submit" class="button has-background-danger-dark has-text-white">
              Login
            </button>
          </p>
        </div>


      </div>
      <div class="column is-half" is="signup-col">
        <p>Sign up</p>
        <!-- signup form -->
        <div class="field">
          <p class="control">
            <input class="input" id="username-signup" type="text" placeholder="Username">
          </p>
        </div>
        <div class="field">
          <p class="control">
            <input class="input" id="password-signup" type="password" placeholder="Password">
          </p>
        </div>
        <div class="field">
          <p class="control">
            <button id="signup-submit" class="button has-background-danger-dark has-text-white">
              Sign-up
            </button>
          </p>
        </div>
      </div>
    </div>
  </div>

<script src="./js/login.js"></script>